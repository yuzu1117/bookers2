<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-log-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
          <% if @user.errors.any? %>
            <%= @user.errors.count %>error prohibited this obj from being saved:
              <ul>
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                 <% end %>
              </ul>
            <% end %>
        <%= form_with model: @user do |f| %>

          <div class="form-group">
            <label for="inputName">Name</label>
            <div>
              <%= f.text_field :name, autofocus: true, id:"inputName"%>
            </div>
          </div>
          <div class="form-group">
            <label for="inputImage">Image</label>
            <div>
              <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
            </div>
          </div>
          <div class="form-group">
            <label for="user-Introduction">Introduction</label>
            <div>
              <%= f.text_field :introduction %>
            </div>
          </div>
          <div>
            <%= f.submit "Update User" %>
          </div>
        <% end %>
    </div>
  </dov>
</div>