<div class="container px-5 px-sm-0">
  <div class="row ">
   <%= render 'users/index', user:@user %>
   <div class="col-md-8 offset-md-1">
     <h2>Books</h2>
     <table class="table table-hover table-inverse">
        <thead>
          <tr>
           <th></th>
           <th>Title</th>
           <th>Opinion</th>
           <th colspan="3"></th>
          </tr>
        </thead>

       <tbody>
        <% @books.each do |book|%>
        <tr>
         <td><%= image_tag @user.get_profile_image(100,100) %></td>
         <td><%= book.title %></td>
         <td><%= book.body %></td>
         <td><%= link_to 'edit', edit_book_path %></td>
         <td>
          <% if book.user == current_user %>
           <%= link_to 'destroy', book_path, method: :delete %>
          <% end %>
          </td>
        </tr>
        <% end %>
       </tbody>
      </table>
    </div>

  </div>
</div>